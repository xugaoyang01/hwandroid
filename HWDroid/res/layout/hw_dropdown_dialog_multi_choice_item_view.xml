<?xml version="1.0" encoding="utf-8"?>
<com.yunos.yundroid.widget.itemview.DropdownDialogMultiChoiceItemView	
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:layout_width="match_parent"
	android:paddingLeft="25dp"
	android:paddingRight="25dp"
	android:background="@drawable/hw_dropdown_dialog_btn_item_view"
	android:gravity="center">
		
    <LinearLayout 
        android:layout_height="55dp"
	    android:layout_width="0dp"
	    android:layout_weight="1"
	    android:gravity="center_vertical|left"
        >
        <TextView
			android:id="@+id/gd_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:textColor="#1c1c1c"
			android:singleLine="true"
			android:ellipsize="end" />
    </LinearLayout>
    
    <RadioButton
        android:id="@+id/gd_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:clickable="false"
        android:focusable="false"
		android:background="@drawable/hw_dropdown_dialog_radio_button"  
        android:button="@null"/>
    
</com.yunos.yundroid.widget.itemview.DropdownDialogMultiChoiceItemView>