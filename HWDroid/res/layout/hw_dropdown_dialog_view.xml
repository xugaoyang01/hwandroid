<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">
	<LinearLayout android:id="@+id/pop_layout"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:orientation="vertical"
	    android:layout_alignParentBottom="true">
	    <LinearLayout
	        android:id="@+id/dialog_title_view"
	        android:minHeight="55dp"
	        android:layout_height="wrap_content"
		    android:layout_width="match_parent"
		    android:gravity="center"
		    android:visibility="gone"
		    android:background="@drawable/dialog_item_bg_disable"
	        >
	        <TextView
				android:id="@+id/dialog_title_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
	            android:layout_marginLeft="25dp"
		        android:layout_marginRight="25dp"
		        android:textSize="16sp"
		        android:textColor="#919191"
				android:singleLine="false"
				android:ellipsize="marquee"/>
	    </LinearLayout>    
	 	<FrameLayout
	        android:id="@+id/dialog_custom_view" 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:visibility="gone"  
	        />   
	    <ListView android:id="@+id/dialog_listview"
	        android:background="#f8f8f8"
	        android:cacheColorHint="#000000"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"/>
	    <LinearLayout android:id="@+id/dialog_footer_view"
	        android:layout_width="match_parent"
	        android:layout_height="54dp"
	        android:background="#fafafa"
	        android:orientation="horizontal">
	        
	    </LinearLayout>
	</LinearLayout>
</RelativeLayout>