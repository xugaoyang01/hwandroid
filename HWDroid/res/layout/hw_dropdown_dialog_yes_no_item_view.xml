<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@drawable/hw_dropdown_dialog_btn_item_view"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:gravity="center" >

        <Button
            android:id="@+id/yes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/hw_dropdown_dialog_btn_item_view"
            android:text="@string/hw_ok"
            android:textColor="@drawable/hw_dropdown_dialog_btn_item_text_color"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/dialog_line_horizontal" />

        <Button
            android:id="@+id/no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/hw_dropdown_dialog_btn_item_view"
            android:text="@string/hw_cancel"
            android:textColor="@drawable/hw_dropdown_dialog_btn_item_text_color"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:id="@+id/gd_divider_view"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/dialog_line_horizontal" >
    </View>

</LinearLayout>