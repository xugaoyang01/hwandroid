<resources>

	<style name="TextAppearance">
		<item name="android:textColor">?android:attr/textColorPrimary</item>
		<item name="android:textColorHighlight">#FFFF9200</item>
		<item name="android:textColorHint">?android:attr/textColorHint</item>
		<item name="android:textColorLink">#5C5CFF</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textStyle">normal</item>
	</style>
	<style name="TextAppearance.Large">
		<item name="android:textSize">22sp</item>
	</style>
	<style name="TextAppearance.Medium">
		<item name="android:textSize">18sp</item>
	</style>
	<style name="TextAppearance.Small">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">?android:attr/textColorSecondary</item>
	</style>
	<style name="TextAppearance.Separator">
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@android:color/white</item>
	</style>
	
	<style name="TextAppearance.TabIndicator">
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@android:color/black</item>
	</style>
	
	<style name="HWDroid" />
	<style name="HWDroid.Widget" />
	
	<style name="HWDroid.Widget.ItemView">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:textAppearance">?attr/hwTextAppearance</item>
	</style>

	<!-- Styles for the TextItemView -->
	<style name="HWDroid.Widget.ItemView.TextItemView">
		<item name="android:textAppearance">?attr/hwTextAppearanceLarge</item>
	</style>
	
	<!-- Styles for the LongTextItemView -->
	<style name="HWDroid.Widget.ItemView.LongTextItemView">
		<item name="android:textAppearance">?attr/hwTextAppearanceLarge</item>
	</style>
	
	<!-- Styles for the DescriptionItemView -->
	<style name="HWDroid.Widget.ItemView.DescriptionItemView">
		<item name="android:textAppearance">?attr/hwTextAppearanceSmall</item>
	</style>
	
		
	<!-- Styles for the SeparatorItemView -->
	<style name="HWDroid.Widget.ItemView.SeparatorItemView">
		<item name="android:background">#181818</item>
		<item name="android:textAppearance">?attr/hwTextAppearanceSeparator</item>
		<item name="android:paddingLeft">20dp</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">end</item>
	</style>
	
	<!-- Styles for the DrawableItemView -->
	<style name="HWDroid.Widget.ItemView.DrawableItemView" />
	<style name="HWDroid.Widget.ItemView.DrawableItemView.Drawable">
		<item name="android:layout_width">?attr/hwDrawableWidth</item>
		<item name="android:layout_height">?attr/hwDrawableHeight</item>
		<item name="android:layout_marginRight">?attr/hwDrawableMargin</item>
		<item name="android:textAppearance">?attr/hwTextAppearanceLarge</item>
		<item name="android:scaleType">center</item>
	</style>
	<style name="HWDroid.Widget.ItemView.DrawableItemView.Text">
		<item name="android:textAppearance">?attr/hwTextAppearanceLarge</item>
	</style>
	
	<!-- Styles for the ProgressItemView -->
	<style name="HWDroid.Widget.ItemView.ProgressItemView" />
	<style name="HWDroid.Widget.ItemView.ProgressItemView.ProgressBar">
		<item name="android:layout_width">?attr/hwProgressBarWidth</item>
		<item name="android:layout_height">?attr/hwProgressBarHeight</item>
		<item name="android:layout_marginRight">?attr/hwDrawableMargin</item>
	</style>
	<style name="HWDroid.Widget.ItemView.ProgressItemView.Text">
		<item name="android:textAppearance">?attr/hwTextAppearanceLarge</item>
	</style>
	
	<!-- Styles for the SubtitleItemView -->
	<style name="HWDroid.Widget.ItemView.SubtitleItemView" />
	<style name="HWDroid.Widget.ItemView.SubtitleItemView.Text">
		<item name="android:textAppearance">?attr/hwTextAppearanceLarge</item>
	</style>
	<style name="HWDroid.Widget.ItemView.SubtitleItemView.Subtitle">
		<item name="android:textAppearance">?attr/hwTextAppearanceSmall</item>
	</style>
	
	<!-- Styles for the SubtextItemView -->
	<style name="HWDroid.Widget.ItemView.SubtextItemView" parent="HWDroid.Widget.ItemView.SubtitleItemView" />
	<style name="HWDroid.Widget.ItemView.SubtextItemView.Text" parent="HWDroid.Widget.ItemView.SubtitleItemView.Text" />
	<style name="HWDroid.Widget.ItemView.SubtextItemView.Subtext" parent="HWDroid.Widget.ItemView.SubtitleItemView.Subtitle" />
	
	<!-- Styles for the ThumbnailItemView -->
	<style name="HWDroid.Widget.ItemView.ThumbnailItemView" />
	<style name="HWDroid.Widget.ItemView.ThumbnailItemView.Text">
		<item name="android:layout_height">?attr/hwItemViewPreferredHalfHeight</item>
		<item name="android:textAppearance">?attr/hwTextAppearanceLarge</item>
	</style>
	<style name="HWDroid.Widget.ItemView.ThumbnailItemView.Subtitle">
		<item name="android:layout_height">?attr/hwItemViewPreferredHalfHeight</item>
		<item name="android:textAppearance">?attr/hwTextAppearanceSmall</item>
	</style>
	<style name="HWDroid.Widget.ItemView.ThumbnailItemView.Thumbnail">
		<item name="android:layout_width">?attr/hwItemViewPreferredHeight</item>
		<item name="android:layout_marginRight">?attr/hwDrawableMargin</item>
	</style>
	
	
	<style name="HWDroid.Widget.SegmentedBar">
		<item name="dividerDrawable">@drawable/hw_segment_divider</item>
	</style>
	
	<style name="HWDroid.Widget.SegmentedHost">
		<item name="segmentedBar">@id/hw_segmented_bar</item>
		<item name="segmentedContentView">@id/hw_segmented_content_view</item>
	</style>


	<!-- ActionBar related styles -->
	<style name="HWDroid.Widget.ActionBar">
		<item name="android:background">?attr/hwActionBarBackground</item>
		<item name="android:layout_height">@dimen/hw_action_bar_height</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="dividerDrawable">?attr/hwActionBarDividerDrawable</item>
		<item name="dividerWidth">?attr/hwActionBarDividerWidth</item>
		<item name="homeDrawable">?attr/hwActionBarHomeDrawable</item>
		<item name="maxItems">?attr/hwActionBarMaxItems</item>
	</style>
	
	<style name="HWDroid.Widget.ActionBar.Dashboard">
		<item name="type">dashboard</item>
	</style>
	
	<style name="HWDroid.Widget.ActionBar.Empty">
		<item name="type">empty</item>
	</style>
	
	<style name="HWDroid.Widget.ActionBar.Item" parent="@style/HWDroid.Widget">
		<item name="android:layout_width">@dimen/hw_action_bar_height</item>
		<item name="android:background">?attr/hwActionBarItemBackground</item>
	</style>
	
	<style name="HWDroid.Widget.ActionBar.Title" parent="@style/HWDroid.Widget">
		<item name="android:textColor">?attr/hwActionBarTitleColor</item>
	</style>
	
	<style name="HWDroid.Widget.TabIndicator" parent="@style/HWDroid.Widget">
		<item name="android:layout_height">?attr/hwTabIndicatorHeight</item>
		<item name="android:textAppearance">?attr/hwTabIndicatorTextAppearance</item>
		<item name="android:background">?attr/hwTabIndicatorBackground</item>
	</style>
	
	<style name="HWDroid.Widget.QuickAction" />
	<style name="HWDroid.Widget.QuickAction.Bar" />
	<style name="HWDroid.Widget.QuickAction.Grid">
		<item name="android:padding">7dp</item>
		<item name="android:listSelector">@drawable/hw_quick_action_grid_selector</item>
		<item name="android:background">@drawable/hw_quick_action_grid_bg</item>
		<item name="android:gravity">center</item>
		<item name="android:fadingEdgeLength">0dp</item>
		<item name="android:stretchMode">columnWidth</item>
		<item name="android:verticalSpacing">7dp</item>
		<item name="android:numColumns">3</item>
	</style>
	
	<style name="HWDroid.Widget.QuickAction.Item">
		<item name="android:layout_height">fill_parent</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:drawablePadding">5dp</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">#333</item>
	</style>
	<style name="HWDroid.Widget.QuickAction.Bar.Item" parent="@style/HWDroid.Widget.QuickAction.Item">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:minWidth">80dp</item>
		<item name="android:background">@drawable/hw_quick_action_bar_item</item>
	</style>
	<style name="HWDroid.Widget.QuickAction.Grid.Item" parent="@style/HWDroid.Widget.QuickAction.Item">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">65dp</item>
	</style>
	
	<style name="HWDroid.Widget.PageIndicator">
		<item name="dotDrawable">@drawable/hw_page_indicator_dot</item>
	</style>
	   
	   <!-- PopDownMenu -->
	<style name="HWDroid.Animation" />
	
	<style name="HWDroid.Animation.PopDown" />
	<style name="HWDroid.Animation.PopDown.Left">
		<item name="@android:windowEnterAnimation">@anim/hw_grow_from_topleft_to_bottomright</item>
		<item name="@android:windowExitAnimation">@anim/hw_shrink_from_bottomright_to_topleft</item>
	</style>
	<style name="HWDroid.Animation.PopDown.Right">
		<item name="@android:windowEnterAnimation">@anim/hw_grow_from_topright_to_bottomleft</item>
		<item name="@android:windowExitAnimation">@anim/hw_shrink_from_bottomleft_to_topright</item>
	</style>
	<style name="HWDroid.Animation.PopDown.Center">
		<item name="@android:windowEnterAnimation">@anim/hw_grow_from_top</item>
		<item name="@android:windowExitAnimation">@anim/hw_shrink_from_bottom</item>
	</style>
	
	<style name="HWDroid.Animation.PopUp" />
	<style name="HWDroid.Animation.PopUp.Left">
		<item name="@android:windowEnterAnimation">@anim/hw_grow_from_bottomleft_to_topright</item>
		<item name="@android:windowExitAnimation">@anim/hw_shrink_from_topright_to_bottomleft</item>
	</style>
	<style name="HWDroid.Animation.PopUp.Right">
		<item name="@android:windowEnterAnimation">@anim/hw_grow_from_bottomright_to_topleft</item>
		<item name="@android:windowExitAnimation">@anim/hw_shrink_from_topleft_to_bottomright</item>
	</style>
	<style name="HWDroid.Animation.PopUp.Center">
		<item name="@android:windowEnterAnimation">@anim/hw_grow_from_bottom</item>
		<item name="@android:windowExitAnimation">@anim/hw_shrink_from_top</item>
	</style>
	
    <style name="HWDroid.Animation.DropDownDialog">
		<item name="@android:windowEnterAnimation">@anim/hw_alpha_in</item>
		<item name="@android:windowExitAnimation">@anim/hw_alpha_out</item>
	</style>	

</resources>